<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPlantItemForNote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" android:orientation="horizontal"
    android:background="@drawable/bg_plant_normal"
    android:gravity="center_vertical"
    android:layout_marginBottom="4dp">

    <ImageView
        android:layout_width="30dp" android:layout_height="30dp" android:layout_marginEnd="8dp" android:src="@drawable/ic_plant"
        android:contentDescription="Plant Icon"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_plant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên cây"
        android:textSize="16sp" android:textColor="@android:color/black"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        tools:ignore="HardcodedText"/>
</LinearLayout>