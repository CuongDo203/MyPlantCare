<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- TextView cho hướng dẫn nhập mật khẩu cũ -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập mật khẩu cũ"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10dp"/>

    <!-- EditText cho mật khẩu cũ -->
    <EditText
        android:id="@+id/CurrentPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu cũ"
        android:inputType="textPassword"
        android:layout_marginBottom="20dp"/>

    <!-- TextView cho hướng dẫn nhập mật khẩu mới -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập mật khẩu mới"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10dp"/>

    <!-- EditText cho mật khẩu mới -->
    <EditText
        android:id="@+id/NewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu mới"
        android:inputType="textPassword"
        android:layout_marginBottom="20dp"/>

    <!-- Nút xác nhận thay đổi mật khẩu -->
    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"
        android:textColor="@android:color/white"
        android:background="?attr/colorPrimary"/>
</LinearLayout>
