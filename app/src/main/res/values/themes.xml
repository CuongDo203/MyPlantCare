<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyPlantCare" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item> <!-- Chỉnh màu nền sáng -->
    </style>

    <style name="Theme.MyPlantCare" parent="Base.Theme.MyPlantCare" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item> <!-- Tăng kích thước chữ -->
        <item name="android:textStyle">bold</item> <!-- Đậm chữ -->
    </style>

    <style name="Theme.MyPlantCare.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyPlantCare.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyPlantCare.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>